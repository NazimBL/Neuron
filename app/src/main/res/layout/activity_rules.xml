        android:textColor="#000001"
        android:layout_height="wrap_content"
        />
    <TextView
        android:layout_width="fill_parent"
        android:textSize="30dp"

        android:layout_marginTop="10dp"
        android:text="Step 2 :"
        android:textColor="#000001"
        android:layout_height="wrap_content"

        />
